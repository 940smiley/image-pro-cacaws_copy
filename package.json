{
  "name": "image-pro",
  "private": true,
  "version": "1.0.0",
  "description": "Image Pro - Advanced image processing and analysis application",
  "author": "940smiley",
  "type": "module",
  "main": "dist_electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit -p tsconfig.app.json",
    "setup": "bash scripts/setup-dev-environment.sh",
    "setup:win": "scripts/setup-dev-environment.bat",
    "build:all": "bash scripts/build-and-release.sh",
    "build:all:win": "scripts/build-and-release.bat",
    "test": "npm run typecheck && npm run lint",
    "release": "bash scripts/build-and-release.sh",
    "electron:dev": "tsc -p tsconfig.electron.json && electron dist_electron/main.js",
    "electron:build": "tsc -p tsconfig.electron.json",
    "build:electron": "npm run build && npm run electron:build && electron-builder",
    "dist": "npm run build && npm run electron:build && electron-builder --publish=never",
    "tauri": "tauri"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "clsx": "^2.1.1",
    "exiftool-vendored": "^35.10.1",
    "framer-motion": "^12.34.3",
    "jszip": "^3.10.1",
    "lucide-react": "^0.575.0",
    "pdf-lib": "^1.17.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "tailwind-merge": "^3.5.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@tailwindcss/postcss": "^4.2.1",
    "@tauri-apps/cli": "^2.10.0",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.4",
    "autoprefixer": "^10.4.24",
    "electron": "^40.6.1",
    "electron-builder": "^26.8.1",
    "eslint": "^10.0.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.2",
    "globals": "^17.3.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.56.1",
    "vite": "^7.3.1"
  },
  "build": {
    "appId": "com.940smiley.imagepro",
    "productName": "Image Pro",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "dist_electron/**/*"
    ],
    "extraResources": [
      "public/**/*"
    ]
  }
}
